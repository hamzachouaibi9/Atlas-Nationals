<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.fbla.atlas.atlas.activities.UserInformation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/logo"
                android:src="@drawable/logoname"
                android:elevation="150dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/text"
                    android:textColor="#000000"
                    android:text="Choose Profile Image"/>

                <ImageButton
                    android:id="@+id/google_pic"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/logoatlas" />

            </android.support.v7.widget.CardView>

            <EditText
                android:id="@+id/google_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_person_avatar"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:singleLine="true" />

            <EditText
                android:id="@+id/google_school"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_old_school"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="School"
                android:inputType="textPersonName"
                android:singleLine="true" />

            <EditText
                android:id="@+id/google_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_phone_receiver"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="Phone #"
                android:inputType="phone"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <Spinner
                android:id="@+id/google_grade"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Grade"
                android:inputType="textPersonName"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="88.75dp" />

            <Spinner
                android:id="@+id/google_age"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <Spinner
                android:id="@+id/google_sex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Gender"/>

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                android:id="@+id/google_register"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#0077c2"
                android:text="Register"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toTopOf="@+id/login2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            </com.andexert.library.RippleView>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

